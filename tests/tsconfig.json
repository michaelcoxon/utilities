{
  "compilerOptions": {
    "baseUrl": ".",
    "noImplicitAny": false,
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "removeComments": false,
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "strict": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "target": "es2015",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "pretty": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./lib",
    "declaration": true,
    "declarationDir": "./lib",
  },
  "compileOnSave": true,
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true,
    "useTranspileModule": true,
    "doTypeCheck": true,
    "forkChecker": true
  },
  "include": [
    "./**/*"
  ],
}