{
  "compilerOptions": {
    "baseUrl": ".",
    "noImplicitAny": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "lib": [ "es6", "es2015" ],
    "target": "es5",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "pretty": true
  },

  "compileOnSave": false,
  "exclude": [
    "node_modules"
  ]
}
